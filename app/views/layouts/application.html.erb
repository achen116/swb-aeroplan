<!DOCTYPE html>
<html>

<head>
  <title>SWB Aeroplan</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!-- Bootstrap CDN -->
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">

	<!-- Bootstrap Rendering/Touch Zooming -->
	<meta name="viewport" content="width=device-width, initial-scale=1">

</head>

<body>
	<!-- Nav Bar -->
	<nav class="navbar navbar-default navbar-fixed-top">
		<div class="container" id="navbar">
			<div class="navbar-header">
				<!-- Hamburger -->
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
				  <span class="sr-only">toggle navigation</span>
				  <span class="icon-bar"></span>
				  <span class="icon-bar"></span>
				  <span class="icon-bar"></span>
				</button>

				<!-- SWB Logo -->
				<a class="navbar-brand" href="#">
					<img id="swb-logo" alt="swb" src="https://beyondmiles.aeroplan.com/uploads/aas/pooling/11/logo_eng_original.jpg">
				</a>
			</div>

			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<!-- Links -->
				<ul class="nav navbar-nav">
					<li class="active">
						<a href="#">About <span class="sr-only">(current)</span></a>
					</li>
					<li>
						<a href="#">Contact</a>
					</li>
				</ul>

				<!-- Donate Button -->
	      <button type="button" class="btn btn-default navbar-btn navbar-right">Donate Now</button>
			</div>
		</div>
	</nav>

	<!-- Banner -->
	<div class="jumbotron" id="banner">
		<div class="container" id="banner-content">
			<h3></h3>
		</div>
	</div>

	<%= yield %>

	<!-- Footer -->
	<footer class="footer">
		<div class="container">
			<p>Copyright 2015</p>
		</div>
	</footer>
  <!-- Bootstrap CDN Script -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</body>

</html>

