<!DOCTYPE html>
<html>

<head>
  <title>SWB Aeroplan</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!-- Bootstrap CDN -->
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">

	<!-- Bootstrap Rendering/Touch Zooming -->
	<meta name="viewport" content="width=device-width, initial-scale=1">

</head>

<body>
	<!-- Nav Bar -->
	<nav class="navbar navbar-default navbar-fixed-top">
		<div class="container" id="navbar">
			<div class="navbar-header">
				<!-- Hamburger -->
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
				  <span class="sr-only">toggle navigation</span>
				  <span class="icon-bar"></span>
				  <span class="icon-bar"></span>
				  <span class="icon-bar"></span>
				</button>

				<!-- SWB Logo -->
				<%= link_to(root_path, class: "navbar-brand") do %>
					<img id="swb-logo" alt="swb" src="http://localhost:3000/imgs/swb-logo.png">
				<% end %>
			</div>

			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<!-- Links -->
				<ul class="nav navbar-nav">
					<li>
						<%= link_to(about_path) do %>
							About <span class="sr-only">(current)</span>
						<% end %>
					</li>
					<li>
						<%= link_to "Contact", contact_path %>
					</li>
				</ul>

				<!-- Donate Button -->
	      <button type="button" class="btn btn-default navbar-btn navbar-right">Donate Now</button>
			</div>
		</div>
	</nav>


	<div id="page-wrap">
		<!-- Banner -->
		<div class="container banner"></div>

		<%= yield %>
	</div>

	<!-- Footer -->
	<footer class="footer">
		<div class="container">
			<p>Copyright 2015</p>
		</div>
	</footer>
  <!-- Bootstrap CDN Script -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</body>

</html>

