<div class="container" id="orgs-grid">
	<div class="row">
		<% @organizations.each do |org| %>
			<div class="col-xs-6 col-md-2" id="org-image">
				<%= link_to(org, class: "thumbnail") do %>
					<img alt="<%= org.name %>" src="<%= org.image %>">
				<% end %>
			</div>

			<div class="col-xs-6 col-md-2" id="org-name">
				<%= link_to(org, class: "thumbnail") do %>
					<%= org.name %>
				<% end %>
			</div>
		<% end %>
	</div>
</div>