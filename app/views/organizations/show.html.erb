<%= link_to(@organization.website, class: "org-banner", target: "blank") do %>
	<div class="org-banner text-center" style="background-image: url(<%= @organization.image %>)">
		<div class="org-banner-title">
			<h1>
					<%= @organization.name.upcase %>
			</h1>
			<h4><%= @organization.headquarters.upcase %></h4>
		</div>
	</div>
<% end %>

<div class="container">

	<div class="row">
		<div class="content col-md-8 col-md-offset-2 text-center">
			<p><%= @organization.description %></p>
			<p>Learn More:
				<%= link_to(@organization.website, target: "blank") do %>
					<%= @organization.website %>
				<% end %>
			</p>
		</div>
	</div>

	<div class="row">
		<div class="social-media col-md-8 col-md-offset-2 text-center">
			<% if @organization.facebook != "" %>
				<%= link_to(@organization.facebook, target: "blank") do %>
					<i class="fa fa-facebook fa-2x"></i>
				<% end %>
			<% else %>
				<i class="fa fa-facebook fa-2x not-avail"></i>
			<% end %>

			<% if @organization.twitter != "" %>
				<%= link_to(@organization.twitter, target: "blank") do %>
					<i class="fa fa-twitter fa-2x"></i>
				<% end %>
			<% else %>
				<i class="fa fa-twitter fa-2x not-avail"></i>
			<% end %>

			<% if @organization.instagram != "" %>
				<%= link_to(@organization.instagram, target: "blank") do %>
					<i class="fa fa-instagram fa-2x"></i>
				<% end %>
			<% else %>
				<i class="fa fa-instagram fa-2x not-avail"></i>
			<% end %>
			
			<% if @organization.logo != "" %>
				<img alt="<%= @organization.name %>" src="<%= @organization.logo %>">
			<% end %>

		</div>
	</div>

	<hr>
	
	<div class="row">
		<div class="col-md-8 col-md-offset-2 text-center">
			<p>
				<%= @organization.miles_description %>
			</p>
		</div>
	</div>

	<div class="row">
		<div class="content col-md-8 col-md-offset-2 text-center">
			<%= render 'layouts/donate' %>
		</div>
	</div>
</div>
